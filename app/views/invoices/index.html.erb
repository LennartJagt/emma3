<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
	  <th>Created at</th>	
      <th>Date</th>
      <th>Number</th>
      <th>Amount</th>
      <th>Vat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
		<td><% sec = (invoice.createtimestamp.to_f / 1000).to_s %>
			<%= Date.strptime(sec, '%s')%></td> 
        <td><%= invoice.date %></td>
        <td><%= invoice.number %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.vat %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

